@page
@model PurchaseBillWebApp.Pages.InvoiceModel
@{
    ViewData["Title"] = "Invoice";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container my-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-success">Invoice</h2>
        <p class="text-muted">Thanks for your purchase!</p>
    </div>

    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Item</th>
                <th>Rate</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.ItemName</td>
                    <td>@(item.Rate.ToString("C"))</td>
                    <td>@item.Quantity</td>
                    <td>@((item.Rate * item.Quantity).ToString("C"))</td>
                </tr>
            }

            <tr class="table-secondary fw-bold">
                <td colspan="3">Subtotal</td>
                <td>@(Model.SubTotal.ToString("C"))</td>
            </tr>
            <tr class="table-warning fw-bold">
                <td colspan="3">GST (18%)</td>
                <td>@(Model.GSTAmount.ToString("C"))</td>
            </tr>
            <tr class="table-success fw-bold">
                <td colspan="3">Grand Total</td>
                <td>@(Model.GrandTotal.ToString("C"))</td>
            </tr>
        </tbody>
    </table>

    <div class="text-center mt-4">
        <button class="btn btn-primary" onclick="window.print()">Print Invoice</button>
    </div>
</div>
